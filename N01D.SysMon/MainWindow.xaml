<Window x:Class="N01D.SysMon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        Title="N01D System Monitor" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#0D0D0D">
    
    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="HeaderStyle">
            <Setter Property="Foreground" Value="#00FF41"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="ValueStyle">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style TargetType="Border" x:Key="PanelStyle">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        <Style TargetType="ProgressBar" x:Key="N01DProgress">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="#00FF41"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1A1A1A" BorderBrush="#00FF41" BorderThickness="0,0,0,2" Padding="15">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="[" Foreground="#00FF41" FontFamily="Consolas" FontSize="20"/>
                    <TextBlock Text=" N01D " Foreground="#0ABDC6" FontFamily="Consolas" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="::" Foreground="#FF0055" FontFamily="Consolas" FontSize="20"/>
                    <TextBlock Text=" SYSMON " Foreground="#00FF41" FontFamily="Consolas" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="]" Foreground="#00FF41" FontFamily="Consolas" FontSize="20"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock x:Name="txtHostname" Text="HOSTNAME" Foreground="#808080" FontFamily="Consolas" FontSize="12" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <TextBlock x:Name="txtUptime" Text="Uptime: 00:00:00" Foreground="#808080" FontFamily="Consolas" FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- CPU Panel -->
            <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource PanelStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="◉ " Foreground="#00FF41"/>
                        <TextBlock Text="CPU MONITOR" Style="{StaticResource HeaderStyle}"/>
                    </StackPanel>
                    
                    <lvc:CartesianChart Grid.Row="1" x:Name="cpuChart"/>
                    
                    <StackPanel Grid.Row="2" Margin="0,10,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="CPU Usage:" Style="{StaticResource ValueStyle}"/>
                            <ProgressBar Grid.Column="1" x:Name="cpuProgress" Style="{StaticResource N01DProgress}" Margin="10,0"/>
                            <TextBlock Grid.Column="2" x:Name="txtCpuPercent" Text="0%" Style="{StaticResource ValueStyle}" Width="50" TextAlignment="Right"/>
                        </Grid>
                        <TextBlock x:Name="txtCpuInfo" Text="Cores: 0 | Threads: 0" Style="{StaticResource ValueStyle}" Margin="0,5,0,0" Foreground="#808080"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Memory Panel -->
            <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource PanelStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="◉ " Foreground="#0ABDC6"/>
                        <TextBlock Text="MEMORY" Style="{StaticResource HeaderStyle}" Foreground="#0ABDC6"/>
                    </StackPanel>
                    
                    <lvc:PieChart Grid.Row="1" x:Name="memChart"/>
                    
                    <StackPanel Grid.Row="2" Margin="0,10,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="RAM:" Style="{StaticResource ValueStyle}"/>
                            <ProgressBar Grid.Column="1" x:Name="memProgress" Style="{StaticResource N01DProgress}" Foreground="#0ABDC6" Margin="10,0"/>
                            <TextBlock Grid.Column="2" x:Name="txtMemPercent" Text="0%" Style="{StaticResource ValueStyle}" Width="50" TextAlignment="Right"/>
                        </Grid>
                        <TextBlock x:Name="txtMemInfo" Text="Used: 0 GB / Total: 0 GB" Style="{StaticResource ValueStyle}" Margin="0,5,0,0" Foreground="#808080"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Disk Panel -->
            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource PanelStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="◉ " Foreground="#FF0055"/>
                        <TextBlock Text="DISK STORAGE" Style="{StaticResource HeaderStyle}" Foreground="#FF0055"/>
                    </StackPanel>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="diskPanel"/>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Network & Processes Panel -->
            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource PanelStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="◉ " Foreground="#FFAA00"/>
                        <TextBlock Text="NETWORK &amp; PROCESSES" Style="{StaticResource HeaderStyle}" Foreground="#FFAA00"/>
                    </StackPanel>
                    
                    <Grid Grid.Row="1" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="↓ Download" Foreground="#00FF41" FontFamily="Consolas" FontSize="11"/>
                            <TextBlock x:Name="txtDownload" Text="0 KB/s" Foreground="#E0E0E0" FontFamily="Consolas" FontSize="14" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="↑ Upload" Foreground="#FF0055" FontFamily="Consolas" FontSize="11"/>
                            <TextBlock x:Name="txtUpload" Text="0 KB/s" Foreground="#E0E0E0" FontFamily="Consolas" FontSize="14" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                    
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="processPanel"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
