<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- N01D Hacker Color Palette -->
    <Color x:Key="N01DBackground">#0D0D0D</Color>
    <Color x:Key="N01DBackgroundAlt">#1A1A1A</Color>
    <Color x:Key="N01DPrimary">#00FF41</Color>
    <Color x:Key="N01DPrimaryDark">#00CC33</Color>
    <Color x:Key="N01DSecondary">#0ABDC6</Color>
    <Color x:Key="N01DAccent">#FF0055</Color>
    <Color x:Key="N01DText">#E0E0E0</Color>
    <Color x:Key="N01DTextDim">#808080</Color>
    <Color x:Key="N01DBorder">#333333</Color>
    <Color x:Key="N01DWarning">#FFAA00</Color>
    <Color x:Key="N01DError">#FF3333</Color>
    <Color x:Key="N01DSuccess">#00FF41</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="N01DBackgroundBrush" Color="{StaticResource N01DBackground}"/>
    <SolidColorBrush x:Key="N01DBackgroundAltBrush" Color="{StaticResource N01DBackgroundAlt}"/>
    <SolidColorBrush x:Key="N01DPrimaryBrush" Color="{StaticResource N01DPrimary}"/>
    <SolidColorBrush x:Key="N01DPrimaryDarkBrush" Color="{StaticResource N01DPrimaryDark}"/>
    <SolidColorBrush x:Key="N01DSecondaryBrush" Color="{StaticResource N01DSecondary}"/>
    <SolidColorBrush x:Key="N01DAccentBrush" Color="{StaticResource N01DAccent}"/>
    <SolidColorBrush x:Key="N01DTextBrush" Color="{StaticResource N01DText}"/>
    <SolidColorBrush x:Key="N01DTextDimBrush" Color="{StaticResource N01DTextDim}"/>
    <SolidColorBrush x:Key="N01DBorderBrush" Color="{StaticResource N01DBorder}"/>
    <SolidColorBrush x:Key="N01DWarningBrush" Color="{StaticResource N01DWarning}"/>
    <SolidColorBrush x:Key="N01DErrorBrush" Color="{StaticResource N01DError}"/>
    <SolidColorBrush x:Key="N01DSuccessBrush" Color="{StaticResource N01DSuccess}"/>

    <!-- Fonts -->
    <FontFamily x:Key="N01DMonoFont">Consolas, Cascadia Mono, JetBrains Mono, Courier New</FontFamily>
    <FontFamily x:Key="N01DUIFont">Segoe UI, Arial</FontFamily>

    <!-- Window Style -->
    <Style x:Key="N01DWindow" TargetType="Window">
        <Setter Property="Background" Value="{StaticResource N01DBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource N01DTextBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource N01DUIFont}"/>
    </Style>

    <!-- Button Style -->
    <Style x:Key="N01DButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource N01DBackgroundAltBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource N01DPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource N01DPrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="FontFamily" Value="{StaticResource N01DMonoFont}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource N01DPrimaryBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource N01DBackgroundBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource N01DPrimaryDarkBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- TextBox Style -->
    <Style x:Key="N01DTextBox" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource N01DBackgroundAltBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource N01DTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource N01DBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="FontFamily" Value="{StaticResource N01DMonoFont}"/>
        <Setter Property="CaretBrush" Value="{StaticResource N01DPrimaryBrush}"/>
        <Setter Property="SelectionBrush" Value="{StaticResource N01DPrimaryBrush}"/>
    </Style>

    <!-- Label Style -->
    <Style x:Key="N01DLabel" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource N01DPrimaryBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource N01DMonoFont}"/>
    </Style>

    <!-- Progress Bar Style -->
    <Style x:Key="N01DProgressBar" TargetType="ProgressBar">
        <Setter Property="Background" Value="{StaticResource N01DBackgroundAltBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource N01DPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource N01DBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Height" Value="20"/>
    </Style>

    <!-- ListBox Style -->
    <Style x:Key="N01DListBox" TargetType="ListBox">
        <Setter Property="Background" Value="{StaticResource N01DBackgroundAltBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource N01DTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource N01DBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontFamily" Value="{StaticResource N01DMonoFont}"/>
    </Style>

    <!-- Tab Control Style -->
    <Style x:Key="N01DTabControl" TargetType="TabControl">
        <Setter Property="Background" Value="{StaticResource N01DBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource N01DBorderBrush}"/>
    </Style>

    <Style x:Key="N01DTabItem" TargetType="TabItem">
        <Setter Property="Background" Value="{StaticResource N01DBackgroundAltBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource N01DTextDimBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource N01DBorderBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource N01DMonoFont}"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Border Name="Border" Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="1,1,1,0" Margin="0,0,2,0"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter ContentSource="Header"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Foreground" Value="{StaticResource N01DPrimaryBrush}"/>
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource N01DBackgroundBrush}"/>
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource N01DPrimaryBrush}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="{StaticResource N01DPrimaryBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
