<Window x:Class="N01D.Forge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="N01D Forge" 
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#0D0D0D">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1A1A1A" BorderBrush="#FF0055" BorderThickness="0,0,0,2" Padding="15">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="[" Foreground="#FF0055" FontFamily="Consolas" FontSize="20"/>
                    <TextBlock Text=" N01D " Foreground="#0ABDC6" FontFamily="Consolas" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="::" Foreground="#00FF41" FontFamily="Consolas" FontSize="20"/>
                    <TextBlock Text=" FORGE " Foreground="#FF0055" FontFamily="Consolas" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="]" Foreground="#FF0055" FontFamily="Consolas" FontSize="20"/>
                </StackPanel>
                <TextBlock Text="Secure Image Burner" HorizontalAlignment="Right" VerticalAlignment="Center" 
                          Foreground="#808080" FontFamily="Consolas" FontSize="12"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Step 1: Select Image -->
            <Border Grid.Row="0" Background="#1A1A1A" BorderBrush="#333333" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,0,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Border Background="#FF0055" CornerRadius="3" Padding="8,3" Margin="0,0,10,0">
                            <TextBlock Text="1" Foreground="White" FontFamily="Consolas" FontWeight="Bold"/>
                        </Border>
                        <TextBlock Text="SELECT IMAGE" Foreground="#FF0055" FontFamily="Consolas" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="txtImagePath" Grid.Column="0" 
                                Background="#0D0D0D" Foreground="#E0E0E0" 
                                BorderBrush="#333333" FontFamily="Consolas"
                                Padding="10,8" IsReadOnly="True"
                                Text="No image selected..."/>
                        <Button x:Name="btnBrowseImage" Grid.Column="1" Content="BROWSE" 
                               Click="BtnBrowseImage_Click" Margin="10,0,0,0"
                               Background="#1A1A1A" Foreground="#FF0055" BorderBrush="#FF0055"
                               Padding="15,8" FontFamily="Consolas" FontWeight="Bold" Cursor="Hand"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Step 2: Select Drive -->
            <Border Grid.Row="1" Background="#1A1A1A" BorderBrush="#333333" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,0,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#0ABDC6" CornerRadius="3" Padding="8,3" Margin="0,0,10,0">
                                <TextBlock Text="2" Foreground="White" FontFamily="Consolas" FontWeight="Bold"/>
                            </Border>
                            <TextBlock Text="SELECT TARGET DRIVE" Foreground="#0ABDC6" FontFamily="Consolas" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button x:Name="btnRefreshDrives" Content="REFRESH" Click="BtnRefreshDrives_Click"
                               HorizontalAlignment="Right"
                               Background="#1A1A1A" Foreground="#0ABDC6" BorderBrush="#0ABDC6"
                               Padding="10,5" FontFamily="Consolas" FontSize="11" Cursor="Hand"/>
                    </Grid>
                    <ListBox x:Name="lstDrives" Grid.Row="1" Height="120"
                            Background="#0D0D0D" Foreground="#E0E0E0" 
                            BorderBrush="#333333" FontFamily="Consolas"/>
                </Grid>
            </Border>

            <!-- Options -->
            <Border Grid.Row="2" Background="#1A1A1A" BorderBrush="#333333" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="VERIFICATION" Foreground="#00FF41" FontFamily="Consolas" FontSize="11" Margin="0,0,0,5"/>
                        <CheckBox x:Name="chkVerify" Content="Verify after write" Foreground="#E0E0E0" FontFamily="Consolas" IsChecked="True"/>
                        <ComboBox x:Name="cmbHash" Margin="0,5,0,0" SelectedIndex="0"
                                 Background="#0D0D0D" Foreground="#E0E0E0" BorderBrush="#333333">
                            <ComboBoxItem Content="SHA-256"/>
                            <ComboBoxItem Content="SHA-512"/>
                            <ComboBoxItem Content="MD5"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0">
                        <TextBlock Text="SECURE ERASE" Foreground="#FFAA00" FontFamily="Consolas" FontSize="11" Margin="0,0,0,5"/>
                        <CheckBox x:Name="chkSecureErase" Content="Erase before write" Foreground="#E0E0E0" FontFamily="Consolas"/>
                        <ComboBox x:Name="cmbEraseMethod" Margin="0,5,0,0" SelectedIndex="0"
                                 Background="#0D0D0D" Foreground="#E0E0E0" BorderBrush="#333333">
                            <ComboBoxItem Content="Zero Fill (1 pass)"/>
                            <ComboBoxItem Content="Random (1 pass)"/>
                            <ComboBoxItem Content="DoD 5220.22-M (3 pass)"/>
                            <ComboBoxItem Content="Gutmann (35 pass)"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="10,0,0,0">
                        <TextBlock Text="BOOTLOADER" Foreground="#FF0055" FontFamily="Consolas" FontSize="11" Margin="0,0,0,5"/>
                        <ComboBox x:Name="cmbBootloader" SelectedIndex="2"
                                 Background="#0D0D0D" Foreground="#E0E0E0" BorderBrush="#333333">
                            <ComboBoxItem Content="UEFI Only"/>
                            <ComboBoxItem Content="Legacy BIOS"/>
                            <ComboBoxItem Content="Hybrid (Both)"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Step 3: Flash -->
            <Border Grid.Row="3" Background="#1A1A1A" BorderBrush="#333333" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,0,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Border Background="#00FF41" CornerRadius="3" Padding="8,3" Margin="0,0,10,0">
                            <TextBlock Text="3" Foreground="#0D0D0D" FontFamily="Consolas" FontWeight="Bold"/>
                        </Border>
                        <TextBlock Text="FLASH IMAGE" Foreground="#00FF41" FontFamily="Consolas" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>
                    <ProgressBar x:Name="progressBar" Grid.Row="1" Height="30" 
                                Background="#0D0D0D" Foreground="#00FF41" BorderBrush="#333333"/>
                    <Grid Grid.Row="2" Margin="0,10,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="txtProgress" Text="Ready" Foreground="#808080" FontFamily="Consolas" FontSize="12"/>
                        </StackPanel>
                        <Button x:Name="btnFlash" Content="FLASH IMAGE" Click="BtnFlash_Click"
                               HorizontalAlignment="Right"
                               Background="#00FF41" Foreground="#0D0D0D" BorderBrush="#00FF41"
                               Padding="25,10" FontFamily="Consolas" FontWeight="Bold" FontSize="14" Cursor="Hand"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Log Output -->
            <Border Grid.Row="4" Background="#1A1A1A" BorderBrush="#333333" BorderThickness="1" CornerRadius="5" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="OUTPUT LOG" Foreground="#808080" FontFamily="Consolas" FontSize="11" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtLog" Grid.Row="1" 
                            Background="#0D0D0D" Foreground="#00FF41" 
                            BorderThickness="0" FontFamily="Consolas" FontSize="11"
                            IsReadOnly="True" TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#1A1A1A" Padding="10,5">
            <Grid>
                <TextBlock x:Name="txtStatus" Text="[ READY ]" Foreground="#00FF41" FontFamily="Consolas" FontSize="11"/>
                <TextBlock Text="N01D Forge v1.0.0 | bad-antics" HorizontalAlignment="Right" 
                          Foreground="#808080" FontFamily="Consolas" FontSize="11"/>
            </Grid>
        </Border>
    </Grid>
</Window>
