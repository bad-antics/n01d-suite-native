<Window x:Class="N01D.Term.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="N01D Terminal" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#0D0D0D">

    <Window.InputBindings>
        <KeyBinding Key="T" Modifiers="Control" Command="{Binding NewTabCommand}"/>
        <KeyBinding Key="W" Modifiers="Control" Command="{Binding CloseTabCommand}"/>
        <KeyBinding Key="Tab" Modifiers="Control" Command="{Binding NextTabCommand}"/>
        <KeyBinding Key="Tab" Modifiers="Control+Shift" Command="{Binding PrevTabCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="180"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#1A1A1A" BorderBrush="#00FF41" BorderThickness="0,0,0,2" Padding="10">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="[" Foreground="#00FF41" FontFamily="Consolas" FontSize="18"/>
                    <TextBlock Text=" N01D " Foreground="#0ABDC6" FontFamily="Consolas" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="::" Foreground="#FF0055" FontFamily="Consolas" FontSize="18"/>
                    <TextBlock Text=" TERM " Foreground="#00FF41" FontFamily="Consolas" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="]" Foreground="#00FF41" FontFamily="Consolas" FontSize="18"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock x:Name="txtUser" Text="user@host" Foreground="#808080" FontFamily="Consolas" FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Tab Bar -->
        <Border Grid.Row="1" Grid.ColumnSpan="2" Background="#1A1A1A" Padding="5,5,5,0">
            <Grid>
                <StackPanel x:Name="tabBar" Orientation="Horizontal"/>
                <Button x:Name="btnNewTab" Content="+" Click="BtnNewTab_Click" 
                        HorizontalAlignment="Right" 
                        Width="30" Height="25"
                        Background="#1A1A1A" Foreground="#00FF41"
                        BorderBrush="#333333" FontWeight="Bold"
                        FontFamily="Consolas"/>
            </Grid>
        </Border>

        <!-- Terminal Content -->
        <Border Grid.Row="2" Grid.Column="0" Background="#0D0D0D" BorderBrush="#333333" BorderThickness="1" Margin="5">
            <Grid x:Name="terminalContainer"/>
        </Border>

        <!-- Quick Commands Sidebar -->
        <Border Grid.Row="2" Grid.Column="1" Background="#1A1A1A" BorderBrush="#333333" BorderThickness="1" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="âš¡ QUICK COMMANDS" Foreground="#FFAA00" FontFamily="Consolas" FontSize="11" Padding="10,8" Background="#0D0D0D"/>
                
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="quickCommands" Margin="5">
                        <!-- Commands will be added here -->
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" Grid.ColumnSpan="2" Background="#1A1A1A" Padding="10,5">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Shell: " Foreground="#808080" FontFamily="Consolas" FontSize="11"/>
                    <TextBlock x:Name="txtShell" Text="PowerShell" Foreground="#00FF41" FontFamily="Consolas" FontSize="11"/>
                    <TextBlock Text="  |  PID: " Foreground="#808080" FontFamily="Consolas" FontSize="11"/>
                    <TextBlock x:Name="txtPid" Text="0" Foreground="#00FF41" FontFamily="Consolas" FontSize="11"/>
                </StackPanel>
                <TextBlock x:Name="txtStatus" Text="Ready" HorizontalAlignment="Right" Foreground="#808080" FontFamily="Consolas" FontSize="11"/>
            </Grid>
        </Border>
    </Grid>
</Window>
